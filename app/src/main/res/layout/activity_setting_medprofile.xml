<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_medprofile"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:text="Settings"
        android:textColor="#efefed"
        android:textSize="40sp" />

    <AutoCompleteTextView
        android:drawableStart="@drawable/med"
        android:id="@+id/autotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Medicine"
        android:textColorHint="#518cbc"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        />

    <AutoCompleteTextView
        android:id="@+id/autotext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Medicine"
        android:textColorHint="#518cbc"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/addmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/add_icon"
        android:layout_marginHorizontal="150dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addmore"
        android:layout_marginHorizontal="100dp"
        android:text="Add more medicine"
        android:textAlignment="center" />

</LinearLayout>